<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.gristeliti.smartu.activities.CourseActivity"
    tools:showIn="@layout/activity_course">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_name_txt"
        android:text="Name: "
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/professor_course_name_txt"
        android:layout_below="@id/course_name_txt"
        android:text="Professor: "
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_rating_txt"
        android:layout_below="@id/professor_course_name_txt"
        android:text="Rating: "
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Board"
        android:id="@+id/board_button"
        android:background="@drawable/buttonshape"
        style="@style/StandardButton"
        android:layout_above="@+id/unsubscribe_button"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/unsubscribe_button"
        android:layout_alignEnd="@+id/unsubscribe_button"
        android:layout_alignLeft="@+id/unsubscribe_button"
        android:layout_alignStart="@+id/unsubscribe_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unsubscribe"
        android:id="@+id/unsubscribe_button"
        android:background="@drawable/buttonshape"
        style="@style/StandardButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
