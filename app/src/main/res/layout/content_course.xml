<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.gristeliti.smartu.activities.CourseActivity"
    tools:showIn="@layout/activity_course">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_name_txt"
        android:text="Name"
        android:layout_marginTop="10dp"
        style="@style/MainData"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/course_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_name_txt"
        android:gravity="center"
        android:background="@color/main_data_color"
        style="@style/MainText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/professor_course_name_txt"
        android:text="Professor"
        style="@style/MainData"
        android:layout_below="@+id/course_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/professor_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/professor_course_name_txt"
        android:gravity="center"
        android:background="@color/main_data_color"
        style="@style/MainText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Board"
        android:id="@+id/board_button"
        android:background="@drawable/buttonshape"
        style="@style/StandardButton"
        android:layout_above="@+id/unsubscribe_button"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/unsubscribe_button"
        android:layout_alignEnd="@+id/unsubscribe_button"
        android:layout_alignLeft="@+id/unsubscribe_button"
        android:layout_alignStart="@+id/unsubscribe_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unsubscribe"
        android:id="@+id/unsubscribe_button"
        android:background="@drawable/buttonshape"
        style="@style/StandardButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
